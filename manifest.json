{
  "name": "科研小助手",
  "manifest_version": 2,
  "version": "1.0.0",
  "author": "JMx",
  "homepage_url": "http://github.com/jiandandaoxingfu/scientific-research-assistant",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "64": "icon.png"
  },

  "description": "科研小助手",
  "permissions": [
    "tabs"
  ],

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "32": "icon.png",
      "48": "icon.png",
      "64": "icon.png"
    }
  },

  "content_scripts": [
    {
    	"matches": [
    		  "http://*/*",
          "https://*/*"],
    	"js": [
          "pages/commonJs/axios.min.js",
        	"content-script/download-paper-button.js",
          "content-script/arxiv.js"],
    	"run_at": "document_end"
  	}
  ]
}